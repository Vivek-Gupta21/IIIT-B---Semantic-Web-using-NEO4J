<h2>Enter the subject details</h2>
<div class = "fac-text">
<form method="post" action="/subject/add">
  <label>Subject Name: </label>
  <input type="text" name="Subject_Name"><br><br>
  <label>Credits: </label>
  <input type="text" name="Subject_Credit"><br><br>
  <input type="submit" value="Submit">
</form>
</div>


<h2>Add subject taught by a faculty</h2> 
  <div class = "fac-text">
  <form method="post" action="/subject/taughtby/add">
  
  <label>Subject Name: </label>
  <input type="text" name="Subject_name"><br><br>

  <label>Faculty Name:  &nbsp;&nbsp;</label>
  <input type="text" name="fac_name"><br><br>

  <input type="submit" value="Submit">
  </form>
  </div>


  <h2>Subjects offered at IIIT Bangalore</h2>

<table id="customers">
  <tr>
    <th>Subject</th>
    <th>Credits</th>
  </tr>
  <% Subjects.forEach(function(sub){ %>
  <tr>
    <td><%= sub.Subject_Name %></td>
    <td><%= sub.Subject_Credit %></td>
  </tr>
  <% }) %>
